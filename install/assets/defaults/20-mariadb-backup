#!/command/with-contenv bash

DB_BACKUP=${DB_BACKUP:-"FALSE"}
DB_BACKUP_LOCATION=${DB_BACKUP_LOCATION:-"FILESYSTEM"}
DB_BACKUP_BLOBXFER_REMOTE_PATH=${DB_BACKUP_BLOBXFER_REMOTE_PATH:-"/docker-db-backup"}
DB_BACKUP_CHECKSUM=${DB_BACKUP_CHECKSUM:-"MD5"}
DB_BACKUP_COMPRESSION=${DB_BACKUP_COMPRESSION:-"ZSTD"}
DB_BACKUP_COMPRESSION_LEVEL=${DB_BACKUP_COMPRESSION_LEVEL:-"3"}
DB_BACKUP_DUMP_BEGIN=${DB_BACKUP_DUMP_BEGIN:-+0}
DB_BACKUP_DUMP_FREQ=${DB_BACKUP_DUMP_FREQ:-1440}
DB_BACKUP_DUMP_TARGET=${DB_BACKUP_DUMP_TARGET:-"/backup"}
DB_BACKUP_ENABLE_CHECKSUM=${DB_BACKUP_ENABLE_CHECKSUM:-"TRUE"}
DB_BACKUP_ENABLE_PARALLEL_COMPRESSION=${DB_BACKUP_ENABLE_PARALLEL_COMPRESSION:-"TRUE"}
DB_BACKUP_MANUAL_RUN_FOREVER=${DB_BACKUP_MANUAL_RUN_FOREVER:-"TRUE"}
DB_BACKUP_MODE=${DB_BACKUP_MODE:-"AUTO"}
DB_BACKUP_MYSQL_ENABLE_TLS=${DB_BACKUP_MYSQL_ENABLE_TLS:-"FALSE"}
DB_BACKUP_MYSQL_MAX_ALLOWED_PACKET=${DB_BACKUP_MYSQL_MAX_ALLOWED_PACKET:-"512M"}
DB_BACKUP_MYSQL_SINGLE_TRANSACTION=${DB_BACKUP_MYSQL_SINGLE_TRANSACTION:-"TRUE"}
DB_BACKUP_MYSQL_STORED_PROCEDURES=${DB_BACKUP_MYSQL_STORED_PROCEDURES:-"TRUE"}
DB_BACKUP_MYSQL_TLS_CA_FILE=${DB_BACKUP_MYSQL_TLS_CA_FILE:-"/etc/ssl/cert.pem"}
DB_BACKUP_MYSQL_TLS_VERIFY=${DB_BACKUP_MYSQL_TLS_VERIFY:-"FALSE"}
DB_BACKUP_MYSQL_TLS_VERSION=${DB_BACKUP_MYSQL_TLS_VERSION:-"TLSv1.1,TLSv1.2,TLSv1.3"}
DB_BACKUP_PARALLEL_COMPRESSION_THREADS=${DB_BACKUP_PARALLEL_COMPRESSION_THREADS:-"$(nproc)"}
DB_BACKUP_S3_CERT_SKIP_VERIFY=${DB_BACKUP_S3_CERT_SKIP_VERIFY:-"TRUE"}
DB_BACKUP_S3_PROTOCOL=${DB_BACKUP_S3_PROTOCOL:-"https"}
DB_BACKUP_SCRIPT_LOCATION_PRE=${DB_BACKUP_SCRIPT_LOCATION_PRE:-"/assets/scripts/pre/"}
DB_BACKUP_SCRIPT_LOCATION_POST=${DB_BACKUP_SCRIPT_LOCATION_POST:-"/assets/scripts/post/"}
DB_BACKUP_SIZE_VALUE=${DB_BACKUP_SIZE_VALUE:-"bytes"}
DB_BACKUP_SKIP_AVAILABILITY_CHECK=${DB_BACKUP_SKIP_AVAILABILITY_CHECK:-"FALSE"}
DB_BACKUP_SPLIT_DB=${DB_BACKUP_SPLIT_DB:-"TRUE"}
DB_BACKUP_TEMP_LOCATION=${DB_BACKUP_TEMP_LOCATION:-"/tmp/backups"}
DB_BACKUP_TYPE=MARIADB

